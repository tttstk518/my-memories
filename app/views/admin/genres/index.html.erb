<div class="container">
  <h4 class="ml-5">ジャンル一覧・追加</h4>
  <div class="row my-5">
    <%= form_with model: @genre, url: admin_genres_path, class: "row d-flex align-items-center" do |f| %>
      <div class="col-md-3 mr-2">
      <b>ジャンル名</b>
      </div>
      <%= f.text_field :name, placeholder: "ジャンル名", class: "col-md-6 mr-3" %>
      <div class="col-md-1">
        <%= f.submit '新規登録', class: "btn btn-lg btn-outline-secondary" %>
      </div>
    <% end %>
  </div>
  <div class="col-4 py-3 border-bottom border-top">
    <b class="pl-5">ジャンル</b>
  </div>
  <% @genres.each do |genre| %>
    <div class="row d-flex align-items-center">
      <div class="col-4 py-3 pr-4 border-bottom">
      <%= genre.name %>
        <div class="float-right"><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-outline-secondary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
