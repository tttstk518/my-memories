<div class="container">
  <div class="row mt-3">
    <div class="col offset-sm-1 col-sm-6">
      <h4><%= @user.name %>さんの会員情報編集</h4>
      <div class="row mt-4 flex-column align-items-center">
      <%= form_with model: @user, url: admin_user_path(@user.id), method: :patch do |f| %>
        <table>
          <tr>
            <td>会員ID</td>
            <td><%= @user.id %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= f.text_field :name, class: "form-control col-md-10" %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= f.text_field :email, class: "form-control col-md-10" %></td>
          </tr>
          <tr>
            <td>introduction</td>
            <td><%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"自己紹介" %></td>
          </tr>
        </table>
          <%= f.submit "変更を保存", class: "btn btn-outline-secondary btn-sm col-3 offset-md-3" %>
      <% end %>
      </div>
    </div>
  </div>
</div>