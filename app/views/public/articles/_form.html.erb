<div class="container">
  <div class="row mb-3">
    <div class="col">
    <h4>投稿機能</h4>
    <%= form_with model: @article do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title %>
      </div>
      <div class="form-group">
        <%= f.label :text %>
        <%= f.text_area :text %>
      </div>
      <div class="form-group">
        <%= f.file_field :image, accept: "image/*" %>
      </div>
      <div class="form-group">
        <%= f.submit class: 'btn btn-success' %>
      </div>
    <% end %>
    </div>
  </div>
</div>
